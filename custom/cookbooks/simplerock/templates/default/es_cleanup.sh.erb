#!/bin/bash

for i in $(curl -sSL http://localhost:9200/_stats/indexes\?pretty\=1 | grep marvel | grep -vF "$(date +%m.%d)" | awk '{print $1}' | sed 's/\"//g' 2>/dev/null); do
  curl -sSL -XDELETE http://127.0.0.1:9200/$i > /dev/null 2>&1
done

curl -sSL -XPUT 'localhost:9200/_all/_settings' -d '
{
    "index" : {
        "number_of_replicas" : 0
    }
}' > /dev/null 2>&1


